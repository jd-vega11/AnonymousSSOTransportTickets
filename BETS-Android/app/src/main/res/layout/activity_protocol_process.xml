<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="uk.ac.surrey.bets_framework.ProtocolProcessActivity">

    <include
        android:id="@+id/process_activity_bar"
        layout="@layout/top_app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/t_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/l_step1"
            android:textAppearance="@style/title"
            android:gravity="center"
            android:layout_margin="16dp"
            />

        <ImageView
            android:id="@+id/img_process"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:clickable="true"
            app:srcCompat="@drawable/put" />

        <TextView
            android:id="@+id/t_process_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/l_process_subtitle"
            android:textAppearance="@style/subtitle"
            android:gravity="center"
            android:layout_margin="16dp"
            />

    </LinearLayout>

</LinearLayout>
